{
  "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  
  "files": {
    "ignore": ["dist/**", "node_modules/**", "bun.lockb"]
  },

  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 80
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
